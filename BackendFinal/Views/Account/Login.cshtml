@using BackendFinal.ViewModels
@model LoginVM
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="login-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">Login to Your Account</h4>
                    <div asp-validation-summary="ModelOnly"></div>
                    <form method="post">
                        <div class="single-form">
                            <input class="form-control form-control-lg" asp-for="UsernameOrEmail" placeholder="Username">
                            <span asp-validation-for="UsernameOrEmail"></span>
                        </div>
                        <div class="single-form">
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="custom-checkbox mt-30">
                            <input type="checkbox" id="account">
                            <label for="account"></label>
                            <p>Remember me</p>
                        </div>
                        <div class="single-form">
                            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">LOGIN</button>
                        </div>
                    </form>
                    <p class="mt-20"><a asp-action="forgotpassword">Lost your password?</a></p>
                    <p class="mt-10">No account? <a asp-action="register">Create one here.</a></p>
                </div>
            </div>
        </div>
    </div>
</section>
