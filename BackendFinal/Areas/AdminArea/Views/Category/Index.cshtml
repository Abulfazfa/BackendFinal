@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Role Table</h4>
                <a class="btn btn-success" asp-controller="role" asp-action="create">Add Role</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Children's name</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        @foreach (var child in category.Children)
                                        {
                                            <p>@child.Name</p>
                                        }
                                    </td>
                                    
                                    <td>
                                       @* <a class="btn btn-secondary" asp-controller="category" asp-action="detail" asp-route-id="@item.Id">Detail</a>*@
                                        <a class="btn btn-primary" asp-controller="category" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-controller="category" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

