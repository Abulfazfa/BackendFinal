@model BlogVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>



                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <img src="~/images/@Model.ImgUrl" width="250" height="250" />
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input class="form-control" asp-for="Photo" id="fileInput">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input class="form-control" asp-for="Title" id="fileInput">
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc"></label>
                        <input class="form-control" asp-for="Desc" id="fileInput">
                        <span asp-validation-for="Desc"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedDate"></label>
                        <input class="form-control" asp-for="CreatedDate" id="fileInput">
                        <span asp-validation-for="CreatedDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date"></label>
                        <input class="form-control" asp-for="Date" id="fileInput">
                        <span asp-validation-for="Date"></span>
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" asp-controller="blog" asp-action="index">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>